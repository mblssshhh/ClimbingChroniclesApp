<Window x:Class="ClimbingChroniclesApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClimbingChroniclesApp"
        mc:Ignorable="d"
        Title="Хроники восхождений" Height="650" Width="800">
    <Grid>
        <DockPanel>
            <StackPanel DockPanel.Dock="Left" Width="200" Background="#F5F5F5">
                <Button Content="Альпинисты" Click="Climbers_Click" Margin="5" Padding="10" HorizontalAlignment="Stretch" Background="#DCDCDC" BorderBrush="#BEBEBE"/>
                <Button Content="Горы" Click="Mountains_Click" Margin="5" Padding="10" HorizontalAlignment="Stretch" Background="#DCDCDC" BorderBrush="#BEBEBE"/>
                <Button Content="Группы" Click="Groups_Click" Margin="5" Padding="10" HorizontalAlignment="Stretch" Background="#DCDCDC" BorderBrush="#BEBEBE"/>
                <Button Content="Экспедиции" Click="Expeditions_Click" Margin="5" Padding="10" HorizontalAlignment="Stretch" Background="#DCDCDC" BorderBrush="#BEBEBE"/>
            </StackPanel>

            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
        </DockPanel>
    </Grid>
</Window>

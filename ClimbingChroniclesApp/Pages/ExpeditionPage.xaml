<Page x:Class="ClimbingChroniclesApp.Pages.ExpeditionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Экспедиции">
    <Grid Margin="10">

        <DataGrid x:Name="ExpeditionDataGrid" AutoGenerateColumns="False" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="300" Margin="0,10,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding id}" Width="Auto"/>
                <DataGridTextColumn Header="Группа" Binding="{Binding group_id}" Width="*"/>
                <DataGridTextColumn Header="Гора" Binding="{Binding mountain_id}" Width="*"/>
                <DataGridTextColumn Header="Дата начала" Binding="{Binding start_date}" Width="*"/>
                <DataGridTextColumn Header="Дата окончания" Binding="{Binding end_date}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center" Orientation="Vertical" Margin="0,30,0,0">
            <TextBlock Text="Группа" HorizontalAlignment="Left" Margin="0,0,0,5"/>
            <TextBox x:Name="ExpeditionGroupTextBox" Width="250" VerticalContentAlignment="Center" Margin="0,0,0,15"/>

            <TextBlock Text="Гора" HorizontalAlignment="Left" Margin="0,0,0,5"/>
            <TextBox x:Name="ExpeditionMountainTextBox" Width="250" VerticalContentAlignment="Center" Margin="0,0,0,15"/>

            <TextBlock Text="Дата начала" HorizontalAlignment="Left" Margin="0,0,0,5"/>
            <TextBox x:Name="ExpeditionStartDateTextBox" Width="250" VerticalContentAlignment="Center" Margin="0,0,0,15"/>

            <TextBlock Text="Дата окончания" HorizontalAlignment="Left" Margin="0,0,0,5"/>
            <TextBox x:Name="ExpeditionEndDateTextBox" Width="250" VerticalContentAlignment="Center" Margin="0,0,0,15"/>

            <Button Content="Добавить экспедицию" Width="250" Margin="0,5"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Редактировать" Width="120" Margin="5"/>
                <Button Content="Удалить" Width="120" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

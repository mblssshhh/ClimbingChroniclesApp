<Page x:Class="ClimbingChroniclesApp.Pages.GroupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Группы">
    <Grid Margin="10">
        <DataGrid x:Name="GroupDataGrid" AutoGenerateColumns="False" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="300" Margin="0,10,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding id}" Width="Auto"/>
                <DataGridTextColumn Header="Название группы" Binding="{Binding group_name}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center" Orientation="Vertical" Margin="0,30,0,0">
            <TextBlock Text="Название группы" HorizontalAlignment="Left" Margin="0,0,0,5"/>
            <TextBox x:Name="GroupNameTextBox" Width="250" VerticalContentAlignment="Center" Margin="0,0,0,15"/>
            <Button Content="Добавить группу" Width="250" Margin="0,5"/>
            <Button Content="Редактировать участников" Width="250" Margin="0,5"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Редактировать" Width="120" Margin="5"/>
                <Button Content="Удалить" Width="120" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

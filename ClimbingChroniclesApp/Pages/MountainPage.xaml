<Page x:Class="ClimbingChroniclesApp.Pages.MountainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Горы">
    <Grid Margin="10">
        <DataGrid x:Name="MountainDataGrid" AutoGenerateColumns="False" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="300" Margin="0,10,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding id}" Width="Auto"/>
                <DataGridTextColumn Header="Название" Binding="{Binding name}" Width="*"/>
                <DataGridTextColumn Header="Высота" Binding="{Binding height}" Width="*"/>
                <DataGridTextColumn Header="Страна" Binding="{Binding country}" Width="*"/>
                <DataGridTextColumn Header="Регион" Binding="{Binding region}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center" Orientation="Vertical" Margin="0,30,0,0">
            <TextBlock Text="Название" HorizontalAlignment="Left" Margin="0,0,0,5"/>
            <TextBox x:Name="MountainNameTextBox" Width="250" VerticalContentAlignment="Center" Margin="0,0,0,15"/>

            <TextBlock Text="Высота" HorizontalAlignment="Left" Margin="0,0,0,5"/>
            <TextBox x:Name="MountainHeightTextBox" Width="250" VerticalContentAlignment="Center" Margin="0,0,0,15"/>

            <TextBlock Text="Страна" HorizontalAlignment="Left" Margin="0,0,0,5"/>
            <TextBox x:Name="MountainCountryTextBox" Width="250" VerticalContentAlignment="Center" Margin="0,0,0,15"/>

            <TextBlock Text="Регион" HorizontalAlignment="Left" Margin="0,0,0,5"/>
            <TextBox x:Name="MountainRegionTextBox" Width="250" VerticalContentAlignment="Center" Margin="0,0,0,15"/>

            <Button Content="Добавить гору" Width="250" Margin="0,5"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Редактировать" Width="120" Margin="5"/>
                <Button Content="Удалить" Width="120" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
